{
    "name": "simple-orm/simple-orm",
    "description": "一个轻量级的PHP ORM框架，适用于MySQL 5.5+",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "thriken",
            "email": "s449599639@163.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleORM\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleORM\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}